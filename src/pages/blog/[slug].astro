---
import { getCollection } from 'astro:content';
import type { GetStaticPaths } from 'astro';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/sections/Header.astro';
import Footer from '../../components/sections/Footer.astro';

export const getStaticPaths = (async () => {
  const blogPosts = await getCollection('blog');
  return blogPosts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}) satisfies GetStaticPaths;

const { post } = Astro.props;
const { Content } = await post.render();

// Get related posts (same category, exclude current)
const allPosts = await getCollection('blog');
const relatedPosts = allPosts
  .filter(p => p.data.category === post.data.category && p.slug !== post.slug)
  .slice(0, 3);
---

<Layout
  title={`${post.data.title} | Blog Plan de Medios`}
  description={post.data.description}
>
  <Header />

  <main class="blog-post">
    <article class="post-content">
      <header class="post-header">
        <div class="container-custom-narrow">
          <a href="/blog" class="back-link">← Volver al blog</a>

          <div class="post-category">{post.data.category}</div>

          <h1 class="post-title">{post.data.title}</h1>

          <p class="post-description">{post.data.description}</p>

          <div class="post-meta">
            <div class="meta-left">
              <span class="author">{post.data.author}</span>
              <span class="date">
                {post.data.publishDate.toLocaleDateString('es-ES', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </span>
            </div>
            <span class="read-time">{post.data.readTime} de lectura</span>
          </div>

          {post.data.tags && post.data.tags.length > 0 && (
            <div class="post-tags">
              {post.data.tags.map(tag => (
                <span class="tag">#{tag}</span>
              ))}
            </div>
          )}
        </div>
      </header>

      <div class="post-body">
        <div class="container-custom-narrow">
          <div class="prose">
            <Content />
          </div>
        </div>
      </div>

      <footer class="post-footer">
        <div class="container-custom-narrow">
          <div class="share-section">
            <h3>Compartir este artículo</h3>
            <div class="share-buttons">
              <button class="share-btn" aria-label="Compartir en Twitter">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </button>
              <button class="share-btn" aria-label="Compartir en LinkedIn">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </button>
              <button class="share-btn" aria-label="Compartir en Facebook">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </button>
            </div>
          </div>

          <div class="cta-section">
            <h3>Descubre cómo podemos ayudarte</h3>
            <p>Explora nuestros servicios especializados en comunicación y marketing digital</p>
            <a href="/#servicios" class="cta-btn">Ver servicios</a>
          </div>
        </div>
      </footer>
    </article>

    {relatedPosts.length > 0 && (
      <section class="related-posts section-padding">
        <div class="container-custom">
          <h2 class="section-title">Artículos relacionados</h2>
          <div class="related-grid">
            {relatedPosts.map(relatedPost => (
              <article class="related-card">
                <div class="related-category">{relatedPost.data.category}</div>
                <h3 class="related-title">
                  <a href={`/blog/${relatedPost.slug}`}>{relatedPost.data.title}</a>
                </h3>
                <p class="related-description">{relatedPost.data.description}</p>
                <a href={`/blog/${relatedPost.slug}`} class="related-link">
                  Leer más →
                </a>
              </article>
            ))}
          </div>
        </div>
      </section>
    )}
  </main>

  <Footer />
</Layout>

<style>
  .container-custom-narrow {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .post-header {
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    color: white;
    padding: 6rem 0 4rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    color: rgba(255, 255, 255, 0.9);
    text-decoration: none;
    margin-bottom: 2rem;
    transition: all 0.3s ease;
    font-weight: 500;
  }

  .back-link:hover {
    color: white;
    transform: translateX(-5px);
  }

  .post-category {
    display: inline-block;
    padding: 0.5rem 1.25rem;
    background: rgba(255, 255, 255, 0.2);
    border: 2px solid rgba(255, 255, 255, 0.3);
    color: white;
    border-radius: 25px;
    font-size: 0.9rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  .post-title {
    font-size: 3rem;
    line-height: 1.2;
    margin-bottom: 1.5rem;
    font-weight: 700;
  }

  .post-description {
    font-size: 1.25rem;
    line-height: 1.6;
    margin-bottom: 2rem;
    opacity: 0.95;
  }

  .post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 0;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  }

  .meta-left {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .author {
    font-weight: 600;
    font-size: 1rem;
  }

  .date {
    opacity: 0.85;
    font-size: 0.9rem;
  }

  .read-time {
    opacity: 0.85;
    font-size: 0.9rem;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-top: 1.5rem;
  }

  .tag {
    padding: 0.4rem 1rem;
    background: rgba(255, 255, 255, 0.15);
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 500;
  }

  .post-body {
    background: white;
    padding: 4rem 0;
  }

  .prose {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--color-text);
  }

  .prose :global(h2) {
    font-size: 2rem;
    color: var(--color-primary);
    margin-top: 3rem;
    margin-bottom: 1rem;
    font-weight: 700;
  }

  .prose :global(h3) {
    font-size: 1.5rem;
    color: var(--color-primary);
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    font-weight: 600;
  }

  .prose :global(h4) {
    font-size: 1.25rem;
    color: var(--color-primary);
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
    font-weight: 600;
  }

  .prose :global(p) {
    margin-bottom: 1.5rem;
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .prose :global(li) {
    margin-bottom: 0.75rem;
  }

  .prose :global(strong) {
    font-weight: 600;
    color: var(--color-primary);
  }

  .prose :global(a) {
    color: var(--color-accent);
    text-decoration: underline;
    transition: color 0.3s ease;
  }

  .prose :global(a:hover) {
    color: var(--color-secondary);
  }

  .prose :global(blockquote) {
    border-left: 4px solid var(--color-accent);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--color-text-light);
  }

  .post-footer {
    background: var(--color-bg-light);
    padding: 4rem 0;
  }

  .share-section {
    text-align: center;
    margin-bottom: 3rem;
    padding-bottom: 3rem;
    border-bottom: 2px solid #e5e5e5;
  }

  .share-section h3 {
    font-size: 1.5rem;
    color: var(--color-primary);
    margin-bottom: 1.5rem;
  }

  .share-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .share-btn {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    border: 2px solid var(--color-primary);
    background: white;
    color: var(--color-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .share-btn:hover {
    background: var(--color-primary);
    color: white;
    transform: translateY(-3px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .cta-section {
    text-align: center;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    color: white;
    padding: 3rem 2rem;
    border-radius: 16px;
  }

  .cta-section h3 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .cta-section p {
    font-size: 1.1rem;
    margin-bottom: 2rem;
    opacity: 0.95;
  }

  .cta-btn {
    display: inline-block;
    padding: 1rem 2.5rem;
    background: white;
    color: var(--color-primary);
    text-decoration: none;
    border-radius: 50px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .cta-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
  }

  .related-posts {
    background: white;
  }

  .section-title {
    text-align: center;
    font-size: 2.5rem;
    color: var(--color-primary);
    margin-bottom: 3rem;
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .related-card {
    background: var(--color-bg-light);
    border-radius: 12px;
    padding: 2rem;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .related-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
    border-color: var(--color-accent);
  }

  .related-category {
    display: inline-block;
    padding: 0.4rem 1rem;
    background: linear-gradient(135deg, var(--color-accent), var(--color-secondary));
    color: white;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .related-title {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
  }

  .related-title a {
    color: var(--color-primary);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .related-title a:hover {
    color: var(--color-accent);
  }

  .related-description {
    color: var(--color-text-light);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .related-link {
    color: var(--color-accent);
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .related-link:hover {
    transform: translateX(5px);
    display: inline-block;
  }

  @media (max-width: 768px) {
    .post-title {
      font-size: 2rem;
    }

    .post-description {
      font-size: 1.1rem;
    }

    .prose {
      font-size: 1rem;
    }

    .prose :global(h2) {
      font-size: 1.5rem;
    }

    .related-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
