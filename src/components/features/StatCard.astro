---
/**
 * StatCard Component
 *
 * Displays a statistic or value card with icon
 *
 * @prop {string} icon - Icon (emoji or text)
 * @prop {string} title - Card title
 * @prop {string} description - Card description
 * @prop {string} [variant="default"] - Card variant: "default" | "gradient"
 *
 * @example
 * <StatCard
 *   icon="ðŸŽ¯"
 *   title="Strategic Media Planning"
 *   description="Comprehensive campaign planning and optimization"
 *   variant="gradient"
 * />
 */

import Card from '../ui/Card.astro';

interface Props {
  icon: string;
  title: string;
  description: string;
  variant?: 'default' | 'gradient';
}

const { icon, title, description, variant = 'default' } = Astro.props;
---

<Card variant={variant} className="stat-card" hoverable={true}>
  <span class="stat-icon">{icon}</span>
  <h4 class="stat-title">{title}</h4>
  <p class="stat-description">{description}</p>
</Card>

<style>
  .stat-card {
    text-align: center;
    height: 100%;
  }

  .stat-icon {
    font-size: 2.5rem;
    display: block;
    margin-bottom: 1rem;
  }

  .stat-title {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
  }

  .stat-card[data-variant="default"] .stat-title {
    color: var(--color-primary);
  }

  .stat-card[data-variant="gradient"] .stat-title {
    color: white;
  }

  .stat-description {
    font-size: 0.95rem;
    margin: 0;
    line-height: 1.6;
  }

  .stat-card[data-variant="default"] .stat-description {
    color: var(--color-text-light);
  }

  .stat-card[data-variant="gradient"] .stat-description {
    color: rgba(255, 255, 255, 0.9);
  }
</style>
