---
import { mainNav } from '@/data/navigation';
import { siteConfig } from '@/data/site';
---

<header class="header">
  <nav class="nav container-custom">
    <div class="nav-brand">
      <a href="/" class="brand-link" aria-label={`Ir a ${siteConfig.name}`}>
        <div class="logo-square">
          <span class="logo-text">PM</span>
        </div>
      </a>
    </div>

    <button class="nav-toggle" id="navToggle" aria-label="Toggle navigation">
      <span class="hamburger"></span>
      <span class="hamburger"></span>
      <span class="hamburger"></span>
    </button>

    <div class="nav-wrapper">
      <ul class="nav-menu" id="navMenu">
        {mainNav.map(item => (
          <li class="nav-item">
            <a
              href={item.href}
              class="nav-link"
              aria-label={item.ariaLabel}
              target={item.external ? "_blank" : undefined}
              rel={item.external ? "noopener noreferrer" : undefined}
            >
              {item.name}
            </a>
          </li>
        ))}
      </ul>

      <a href="#contacto" class="btn-contact">
        Contacto
      </a>
    </div>
  </nav>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background-color: rgb(2 6 23 / 0.8);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    z-index: 1000;
    transition: all 0.3s ease;
  }

  .nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.5rem;
  }

  .nav-brand {
    z-index: 1001;
  }

  .brand-link {
    text-decoration: none;
  }

  /* Logo PM Square */
  .logo-square {
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, #14b8a6, #10b981);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 12px rgba(20, 184, 166, 0.3);
    transition: all 0.3s ease;
  }

  .logo-square:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(20, 184, 166, 0.4);
  }

  .logo-text {
    font-size: 1.25rem;
    font-weight: 800;
    color: white;
    letter-spacing: -0.02em;
  }

  .nav-toggle {
    display: none;
    flex-direction: column;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    z-index: 1001;
  }

  .hamburger {
    width: 25px;
    height: 2px;
    background-color: var(--color-text);
    margin: 3px 0;
    transition: all 0.3s ease;
    border-radius: 2px;
  }

  .nav-wrapper {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .nav-menu {
    display: flex;
    list-style: none;
    gap: 2.5rem;
    margin: 0;
    padding: 0;
  }

  .nav-item {
    position: relative;
  }

  .nav-link {
    color: rgb(209 213 219); /* text-gray-300 */
    font-weight: 500;
    font-size: 0.875rem;
    padding: 0.5rem 0;
    position: relative;
    transition: color 0.3s ease;
    letter-spacing: 0.025em;
    text-decoration: none;
  }

  .nav-link:hover {
    color: white;
  }

  /* Contact Button */
  .btn-contact {
    padding: 0.625rem 1.5rem;
    background-color: black;
    color: white;
    font-weight: 600;
    font-size: 0.875rem;
    border-radius: 6px;
    text-decoration: none;
    transition: all 0.3s ease;
    letter-spacing: 0.025em;
  }

  .btn-contact:hover {
    background-color: rgb(31 41 55); /* gray-800 */
    transform: translateY(-1px);
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .nav-toggle {
      display: flex;
    }

    .nav-wrapper {
      position: fixed;
      top: 0;
      right: -100%;
      width: 70%;
      height: 100vh;
      background-color: rgb(15 23 42 / 0.98);
      backdrop-filter: blur(16px);
      flex-direction: column;
      padding: 5rem 2rem 2rem;
      gap: 2rem;
      transition: right 0.3s ease;
      border-left: 1px solid rgba(255, 255, 255, 0.05);
    }

    .nav-wrapper.active {
      right: 0;
    }

    .nav-menu {
      flex-direction: column;
      gap: 1.5rem;
    }

    .nav-link {
      font-size: 1.1rem;
      padding: 0.75rem 0;
    }

    .btn-contact {
      width: 100%;
      text-align: center;
      padding: 0.875rem 1.5rem;
    }

    .nav-toggle.active .hamburger:nth-child(1) {
      transform: rotate(45deg) translate(8px, 8px);
    }

    .nav-toggle.active .hamburger:nth-child(2) {
      opacity: 0;
    }

    .nav-toggle.active .hamburger:nth-child(3) {
      transform: rotate(-45deg) translate(8px, -8px);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const navToggle = document.getElementById('navToggle');
    const navWrapper = document.querySelector('.nav-wrapper');
    const navLinks = document.querySelectorAll('.nav-link');
    const btnContact = document.querySelector('.btn-contact');

    navToggle?.addEventListener('click', () => {
      navToggle.classList.toggle('active');
      navWrapper?.classList.toggle('active');
    });

    // Close menu when clicking any navigation link
    [...navLinks, btnContact].forEach(link => {
      link?.addEventListener('click', () => {
        navToggle?.classList.remove('active');
        navWrapper?.classList.remove('active');
      });
    });

    // Close menu when clicking outside
    document.addEventListener('click', (e) => {
      const target = e.target as HTMLElement;
      if (!target.closest('.nav') && navWrapper?.classList.contains('active')) {
        navToggle?.classList.remove('active');
        navWrapper?.classList.remove('active');
      }
    });
  });
</script>
