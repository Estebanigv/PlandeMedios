---
/**
 * Clients Section
 * Displays client success stories with testimonials and metrics
 */

import { Quote, TrendingUp, Users, Award } from 'lucide-astro';

const clients = [
  {
    name: "TechNova Solutions",
    category: "Tecnología SaaS",
    logo: "TN",
    testimonial: "Plan de Medios transformó nuestra estrategia de contenido. En 6 meses aumentamos nuestro tráfico orgánico en 340% y generamos 120+ leads calificados mensuales.",
    results: "+340% tráfico orgánico",
    industry: "Software B2B",
    project: "Estrategia de contenido integral + SEO técnico",
    duration: "6 meses"
  },
  {
    name: "AutoElite Chile",
    category: "Automotriz",
    logo: "AE",
    testimonial: "Tour Motor nos posicionó como referentes en el sector premium. Las producciones audiovisuales superaron 2M de visualizaciones y nuestras ventas crecieron 85%.",
    results: "2M+ visualizaciones",
    industry: "Retail Automotor",
    project: "Contenido audiovisual + Distribución multicanal",
    duration: "12 meses"
  },
  {
    name: "GreenTech Energía",
    category: "Energías Renovables",
    logo: "GT",
    testimonial: "Tour Innovación amplificó nuestra voz en el ecosistema de innovación. Logramos 15 apariciones en medios top y cerramos 3 rondas de inversión exitosas.",
    results: "15 menciones en medios",
    industry: "Cleantech",
    project: "PR Digital + Producción editorial especializada",
    duration: "8 meses"
  }
];

const stats = [
  { number: "120+", label: "Clientes Activos", description: "Empresas que confían en nosotros" },
  { number: "98%", label: "Retención", description: "Clientes que renuevan anualmente" },
  { number: "450+", label: "Proyectos", description: "Campañas ejecutadas con éxito" },
  { number: "15+", label: "Industrias", description: "Sectores diversos atendidos" }
];

const industries = [
  "Tecnología & SaaS",
  "Automotriz",
  "Energías Renovables",
  "Fintech & Banca",
  "E-commerce & Retail",
  "Salud & Biotech",
  "Educación & EdTech",
  "Inmobiliario",
  "Alimentación",
  "Telecomunicaciones",
  "Construcción",
  "Turismo & Hospitalidad"
];
---

<section id="clientes" class="relative py-32 overflow-hidden bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950">
  <!-- Background elements -->
  <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.02)_1px,transparent_1px)] bg-[size:64px_64px]"></div>
  <div class="absolute top-0 left-1/4 w-96 h-96 bg-gradient-to-br from-teal-500/10 to-emerald-500/10 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-gradient-to-br from-blue-500/10 to-teal-500/10 rounded-full blur-3xl"></div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-20">
      <div class="flex items-center justify-center gap-3 mb-6">
        <div class="h-px w-12 bg-gradient-to-r from-transparent via-teal-400 to-transparent"></div>
        <span class="text-sm uppercase tracking-wider text-teal-400">Casos de Éxito</span>
        <div class="h-px w-12 bg-gradient-to-r from-transparent via-teal-400 to-transparent"></div>
      </div>
      <h2 class="text-5xl md:text-6xl mb-6 text-white tracking-tight font-bold">
        Resultados que Hablan por Sí Mismos
      </h2>
      <p class="text-xl text-gray-400 max-w-3xl mx-auto leading-relaxed">
        Empresas líderes que han transformado su presencia digital y amplificado
        su mensaje con nuestras plataformas especializadas.
      </p>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 mb-20">
      {stats.map((stat) => (
        <div class="text-center p-6 bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl hover:border-teal-500/50 transition-all">
          <div class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-teal-400 to-emerald-400 bg-clip-text text-transparent mb-2">
            {stat.number}
          </div>
          <div class="text-white font-semibold mb-1">{stat.label}</div>
          <div class="text-sm text-gray-400">{stat.description}</div>
        </div>
      ))}
    </div>

    <!-- Client Testimonials -->
    <div class="grid md:grid-cols-3 gap-8 mb-20">
      {clients.map((client) => (
        <div class="group bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-8 hover:border-teal-500/50 hover:bg-white/10 transition-all">
          <!-- Logo/Initial -->
          <div class="flex items-center gap-4 mb-6">
            <div class="w-16 h-16 bg-gradient-to-br from-teal-600 to-emerald-700 rounded-xl flex items-center justify-center shadow-lg">
              <span class="text-white font-bold text-xl">{client.logo}</span>
            </div>
            <div>
              <h3 class="text-white font-bold text-lg">{client.name}</h3>
              <p class="text-teal-400 text-sm">{client.category}</p>
            </div>
          </div>

          <!-- Quote Icon -->
          <Quote class="text-teal-400/20 mb-4" size={40} />

          <!-- Testimonial -->
          <p class="text-gray-300 leading-relaxed mb-6 italic">
            "{client.testimonial}"
          </p>

          <!-- Results Badge -->
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-teal-500/10 border border-teal-500/30 rounded-full mb-6">
            <TrendingUp class="text-teal-400" size={16} />
            <span class="text-teal-300 text-sm font-semibold">{client.results}</span>
          </div>

          <!-- Project Details -->
          <div class="space-y-2 pt-6 border-t border-white/10">
            <div class="flex items-start gap-2">
              <span class="text-gray-500 text-sm min-w-[80px]">Industria:</span>
              <span class="text-gray-300 text-sm">{client.industry}</span>
            </div>
            <div class="flex items-start gap-2">
              <span class="text-gray-500 text-sm min-w-[80px]">Proyecto:</span>
              <span class="text-gray-300 text-sm">{client.project}</span>
            </div>
            <div class="flex items-start gap-2">
              <span class="text-gray-500 text-sm min-w-[80px]">Duración:</span>
              <span class="text-gray-300 text-sm">{client.duration}</span>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Industries Section -->
    <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-8 md:p-12">
      <div class="flex items-center gap-3 mb-8">
        <Users class="text-teal-400" size={32} />
        <h3 class="text-2xl md:text-3xl font-bold text-white">Industrias que Atendemos</h3>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        {industries.map((industry) => (
          <div class="flex items-center gap-2 text-gray-300 hover:text-teal-400 transition-colors">
            <div class="w-1.5 h-1.5 bg-teal-400 rounded-full"></div>
            <span class="text-sm">{industry}</span>
          </div>
        ))}
      </div>
    </div>

    <!-- CTA -->
    <div class="mt-16 text-center">
      <div class="inline-flex items-center gap-2 px-6 py-3 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full mb-4">
        <Award class="text-teal-400" size={20} />
        <span class="text-white font-medium">¿Quieres ser nuestro próximo caso de éxito?</span>
      </div>
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mt-8">
        <button
          onclick="document.getElementById('contacto')?.scrollIntoView({ behavior: 'smooth' })"
          class="px-8 py-4 bg-gradient-to-r from-teal-600 to-emerald-700 hover:from-teal-700 hover:to-emerald-800 text-white rounded-xl shadow-lg hover:shadow-xl transition-all font-semibold"
        >
          Agenda una Reunión Estratégica
        </button>
        <button
          onclick="document.getElementById('plataformas')?.scrollIntoView({ behavior: 'smooth' })"
          class="px-8 py-4 border-2 border-white/20 hover:border-teal-500/50 bg-white/5 hover:bg-white/10 text-white rounded-xl transition-all font-semibold"
        >
          Conoce Nuestras Plataformas
        </button>
      </div>
    </div>
  </div>
</section>
