---
import { teamMembers } from '@/data/team';
---

<section id="equipo" class="team">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="section-header">
      <div class="header-decorator">
        <div class="decorator-line"></div>
        <span class="decorator-text">Nuestro Equipo</span>
      </div>
      <h2 class="section-title">
        Equipo Profesional
      </h2>
      <p class="section-subtitle">
        Somos un equipo profesional de excelencia, con una amplia trayectoria en la industria y los medios. Contamos con equipamiento audiovisual de alta calidad, además de sistema de iluminación, microfonía y biblioteca de audio e imágenes.
      </p>
    </div>

    <!-- Team Grid -->
    <div class="team-grid">
      {teamMembers.map((member) => (
        <article class="team-card">
          <div class="member-image-wrapper">
            {member.image ? (
              <img
                src={member.image}
                alt={member.name}
                class="member-image"
                loading="lazy"
              />
            ) : (
              <div class="member-image-placeholder">
                <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <circle cx="12" cy="7" r="4" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
            )}
          </div>
          <div class="member-info">
            <h3 class="member-name">{member.name}</h3>
            <p class="member-role">{member.role}</p>
            {member.social?.email && (
              <a href={`mailto:${member.social.email}`} class="member-email">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <polyline points="22,6 12,13 2,6" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                {member.social.email}
              </a>
            )}
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .team {
    position: relative;
    background: linear-gradient(to bottom, #f9fafb, white);
    padding: 8rem 0;
  }

  /* Section Header */
  .section-header {
    margin-bottom: 4rem;
    max-width: 800px;
    text-align: center;
    margin-left: auto;
    margin-right: auto;
  }

  .header-decorator {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }

  .decorator-line {
    height: 1px;
    width: 48px;
    background: linear-gradient(to right, transparent, #14b8a6, transparent);
  }

  .decorator-text {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 600;
    color: #14b8a6;
  }

  .section-title {
    font-size: 3.75rem;
    font-weight: 800;
    line-height: 1.1;
    color: #111827;
    letter-spacing: -0.03em;
    margin: 0 0 1rem 0;
  }

  .section-subtitle {
    font-size: 1.125rem;
    line-height: 1.7;
    color: #6b7280;
    margin: 0;
  }

  /* Team Grid */
  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
  }

  /* Team Card */
  .team-card {
    background: white;
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid rgba(0, 0, 0, 0.05);
    text-align: center;
  }

  .team-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  .member-image-wrapper {
    margin-bottom: 1.5rem;
  }

  .member-image {
    width: 220px;
    height: 220px;
    margin: 0 auto;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid #14b8a6;
    display: block;
  }

  .member-image-placeholder {
    width: 220px;
    height: 220px;
    margin: 0 auto;
    background: linear-gradient(135deg, #14b8a6, #10b981);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
  }

  .member-info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .member-name {
    font-size: 1.25rem;
    font-weight: 700;
    color: #111827;
    margin: 0;
    line-height: 1.3;
  }

  .member-role {
    font-size: 0.9375rem;
    color: #14b8a6;
    font-weight: 600;
    margin: 0;
    line-height: 1.4;
  }

  .member-email {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-size: 0.8125rem;
    color: #6b7280;
    text-decoration: none;
    transition: color 0.3s ease;
    margin-top: 0.5rem;
  }

  .member-email:hover {
    color: #14b8a6;
  }

  .member-email svg {
    flex-shrink: 0;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .section-title {
      font-size: 3rem;
    }

    .team-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .team {
      padding: 5rem 0;
    }

    .section-title {
      font-size: 2.25rem;
    }

    .team-grid {
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 1.25rem;
    }

    .team-card {
      padding: 1.5rem;
    }

    .member-image,
    .member-image-placeholder {
      width: 180px;
      height: 180px;
    }

    .member-image-placeholder svg {
      width: 36px;
      height: 36px;
    }
  }

  @media (max-width: 480px) {
    .section-title {
      font-size: 1.875rem;
    }

    .team-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .team-card {
      padding: 1.25rem;
    }
  }
</style>
