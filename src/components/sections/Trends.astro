---
/**
 * Trends Section
 * Displays latest blog posts and insights about marketing and communication trends
 */

import { getCollection } from 'astro:content';
import { ArrowRight, Sparkles, Mic, Video, ShoppingCart } from 'lucide-astro';

// Get all blog posts and sort by date (newest first)
const allPosts = await getCollection('blog');
const trends = allPosts
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 8); // Show latest 8 posts

// Icon mapping based on category
const getIconForCategory = (category: string) => {
  const lowerCategory = category.toLowerCase();
  if (lowerCategory.includes('audio') || lowerCategory.includes('podcast')) return 'Mic';
  if (lowerCategory.includes('video') || lowerCategory.includes('audiovisual')) return 'Video';
  if (lowerCategory.includes('ecommerce') || lowerCategory.includes('e-commerce')) return 'ShoppingCart';
  return 'Sparkles';
};
---

<section id="tendencias" class="relative py-32 bg-gradient-to-br from-gray-50 to-white overflow-hidden">
  <!-- Decorative elements -->
  <div class="absolute top-1/4 right-0 w-96 h-96 bg-gradient-to-br from-teal-100/30 to-emerald-100/30 rounded-full blur-3xl"></div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="max-w-3xl mb-20">
      <div class="flex items-center gap-3 mb-6">
        <div class="h-px w-12 bg-gradient-to-r from-teal-600 to-transparent"></div>
        <span class="text-sm uppercase tracking-wider text-teal-600">Insights & Tendencias</span>
      </div>
      <h2 class="text-5xl md:text-6xl mb-6 text-gray-900 tracking-tight">
        Contenido Editorial sobre Marketing y Comunicación
      </h2>
      <p class="text-xl text-gray-600 leading-relaxed">
        Exploramos las tendencias que están transformando la comunicación,
        el marketing y los medios digitales.
      </p>
    </div>

    {trends.length > 0 && (
      <>
        <!-- Featured Article -->
        <div class="mb-12">
          <div class="relative overflow-hidden rounded-2xl bg-black">
            <div class="grid lg:grid-cols-2 gap-0">
              <div class="relative h-96 lg:h-auto">
                <img
                  src="https://images.unsplash.com/photo-1533750349088-cd871a92f312?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3Nzg4Nzd8MHwxfHNlYXJjaHwxfHxkaWdpdGFsJTIwbWFya2V0aW5nJTIwc3RyYXRlZ3l8ZW58MXx8fHwxNzYzMDgxMjU2fDA&ixlib=rb-4.1.0&q=80&w=1080"
                  alt={trends[0].data.title}
                  class="w-full h-full object-cover"
                />
              </div>
              <div class="p-12 lg:p-16 flex flex-col justify-center text-white">
                <div class="text-white/60 mb-4">{trends[0].data.category}</div>
                <h3 class="text-white text-3xl lg:text-4xl mb-6 font-bold tracking-tight">
                  {trends[0].data.title}
                </h3>
                <p class="text-white/80 text-lg mb-8 leading-relaxed">
                  {trends[0].data.description}
                </p>
                <a
                  href={`/blog/${trends[0].slug}`}
                  class="inline-flex items-center gap-2 text-white hover:gap-4 transition-all"
                >
                  Leer artículo
                  <ArrowRight size={20} />
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Trends Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {trends.slice(1).map((trend) => (
            <a
              href={`/blog/${trend.slug}`}
              class="group border-0 shadow-md hover:shadow-xl transition-all overflow-hidden cursor-pointer bg-white rounded-xl"
            >
              <div class="relative h-48 overflow-hidden">
                <img
                  src="https://images.unsplash.com/photo-1568952433726-3896e3881c65?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3Nzg4Nzd8MHwxfHNlYXJjaHwxfHx0ZWNobm9sb2d5JTIwaW5ub3ZhdGlvbnxlbnwxfHx8fDE3NjI5NzkwMDJ8MA&ixlib=rb-4.1.0&q=80&w=1080"
                  alt={trend.data.title}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                />
                <div class="absolute top-4 left-4 bg-white/95 backdrop-blur-sm px-3 py-1 rounded-full">
                  <span class="text-sm font-medium text-gray-900">{trend.data.category}</span>
                </div>
              </div>
              <div class="p-6">
                <h4 class="text-xl font-bold text-gray-900 mb-3 tracking-tight">{trend.data.title}</h4>
                <p class="text-gray-600 mb-4 line-clamp-3 leading-relaxed">
                  {trend.data.description}
                </p>
                <div class="flex items-center gap-2 text-black group-hover:gap-4 transition-all font-medium">
                  Leer más
                  <ArrowRight size={18} />
                </div>
              </div>
            </a>
          ))}
        </div>
      </>
    )}
  </div>
</section>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
